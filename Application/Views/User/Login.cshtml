@model Application.InputDTOs.LoginDTO;
@Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })
<main class="form-signin">
    <div class="row">
        @using (Html.BeginForm("Login", "User", FormMethod.Post))
        {
            <form>
                <div class="row g-3">
                    <div class="col-12">
                        <h1 class="h3 mb-3 fw-normal">Please sign in</h1>
                    </div>
                    <div class="col-12">
                        <div class="row">
                            <div class="col-1">
                                <label for="username" class="form-label">Username</label>
                            </div>
                            <div class="col-7">
                                <div class="input-group has-validation">
                                    <span class="input-group-text">@@</span>
                                    @Html.TextBoxFor(m => m.Username, new { placeholder = "name@example.com", @class = "form-control w100" })
                                </div>
                            
                            </div>
                            <div class="col-4">
                                @Html.ValidationMessageFor(m => m.Username, "", new { @class = "alert alert-danger" })
                            </div>
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="row">
                            <div class="col-1">
                                <label for="email" class="form-label">Password</label>
                            </div>
                            <div class="col-7">
                                @Html.PasswordFor(m => m.Password, new { placeholder = "Password", @class = "form-control w100" })
                            </div>
                            <div class="col-4">
                                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "alert alert-danger" })
                            </div>
                        </div>
                    </div>

                    <div class="col-12">
                        <div class="checkbox mb-3">
                            <label>
                                <input type="checkbox" value="remember-me"> Remember me
                            </label>
                        </div>
                    </div>
                    <div class="col-2">
                        <button class="w-100 btn btn-lg btn-primary" type="submit">Sign in</button>
                    </div>
                    <div class="col-10"></div>
                </div>
            </form>
        }
    </div>

</main>
