@model Application.InputDTOs.UserRegistration;


<h2>Registration</h2>
<hr class="my-4">

<p>@ViewBag.result</p>
@Html.ValidationSummary(false, "", new { @class = "error" })
<h4 class="mb-3">Register a new user</h4>
<div class="row g-5">

    @using (Html.BeginForm("Register", "User", FormMethod.Post))
    {
        <div class="row g-3">
            <div class="col-sm-6">
                <label for="firstName" class="form-label">First Name</label>
                @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" })
                <div>
                    @Html.ValidationMessageFor(m => m.FirstName, "", new { @class = "error" })
                </div>
            </div>
            <div class="col-sm-6">
                <label for="firstName" class="form-label">Last name</label>
                @Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })
                <div>
                    @Html.ValidationMessageFor(m => m.LastName, "", new { @class = "error" })
                </div>
            </div>
            <div class="col-12">
                <label for="username" class="form-label">Username</label>
                <div class="input-group has-validation">
                    <span class="input-group-text">@@</span>
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                    <div>
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "error" })
                    </div>
                </div>
            </div>
            <div class="col-6">
                <label for="firstName" class="form-label">Password</label>
                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                <div>
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "error" })
                </div>
            </div>
            <div class="col-6">
                <label for="Role" class="form-label">Role</label>
                @Html.DropDownListFor(model => model.RoleId, ViewBag.ListOfRoles as SelectList, new { @class = "form-control" })
                <div>
                    @Html.ValidationMessageFor(m => m.RoleId, "", new { @class = "error" })
                </div>
            </div>
            <div class="col-3">
                <button class="btn btn-primary" type="submit">Add New User</button>
                <input type="button" value="Reset" class="btn btn-secondary" onclick="location.href='@Url.Action("Register", "User")'" />
            </div>
            <div class="col-9">
            </div>
        </div>
    }
</div>